#!/usr/bin/env node
const Program = require('commander')
const inquirer = require('inquirer')
const logger = require('../lib/logger.js')
const { isProjectName, isAppId } = require('../lib/validate')
const { init } = require('../scripts/init')

const Prompt = inquirer.createPromptModule()

const initPrompt = [
  {
    type: 'input',
    name: 'projectName',
    message: '请输入项目名称',
    validate(input) {
      if (!isProjectName(input)) {
        return '项目名称格式错误'
      }
      return true
    },
  },
  {
    type: 'input',
    name: 'projectDescription',
    message: '请输入项目描述',
    defualt: '',
  },
  {
    type: 'input',
    name: 'author',
    message: '请输入作者',
    defualt: '',
  },
  {
    type: 'input',
    name: 'appId',
    message: '请输入小程序appId',
    validate(input) {
      if (!isAppId(input)) {
        return 'appId格式错误'
      }
      return true
    },
  },
  {
    type: 'list',
    name: 'libVersion',
    message: '请选择微信小程序开发者工具的基础库版本',
    choices: ['2.15.0', '2.14.4', '2.14.3', '2.14.1', '2.14.0'],
    default: '2.15.0',
  },
  {
    type: 'list',
    name: 'componentLibrary',
    message: '请选择一个组件库',
    default: 'jpass',
    choices: ['jpass', 'vant-weapp'],
  },
  {
    type: 'list',
    name: 'cssPrecompiledType',
    message: '请选择一个css预编译类型',
    default: 'Sass',
    choices: ['Sass', 'Less'],
  },
  {
    type: 'confirm',
    name: 'esLint',
    message: '是否启用Eslint进行代码校验?',
    default: true,
  },
  {
    type: 'confirm',
    name: 'isOk',
    message: '确定执行以上操作？',
    default: true,
  },
]

Program.action(() => {
  Prompt(initPrompt)
    .then(async (answer) => {
      if (answer.isOk) {
        await init(answer)
      } else {
        logger.error('你取消了操作，请重试')
      }
    })
    .catch((error) => {
      logger.error(error.stack)
      process.exit(1)
    })
})

Program.parse(process.argv)
