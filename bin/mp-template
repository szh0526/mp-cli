#!/usr/bin/env node
const Program = require('commander')
const {
  add, del, list, init, use,
} = require('../scripts/template')

Program
  .name('mp-template')
  .option('-a, --add', '新增模板')
  .option('-d, --del', '删除模板')
  .option('-ls, --list', '模板列表')
  .option('-i, --init', '初始化基础模板')
  .option('-u, --use', '切换模板')
  .action(async (options) => {
    if (options.add) {
      add()
    } else if (options.del) {
      del()
    } else if (options.list) {
      list()
    } else if (options.init) {
      init()
    } else if (options.use) {
      use()
    }
  })

Program.parse(process.argv)
